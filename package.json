{
  "name": "advanced-logger-guide",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://alexeypopovua.github.io/advanced-logger-guide",
  "dependencies": {
    "marked": "0.6.0",
    "prismjs": "latest",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-loadable": "5.5.0",
    "react-router-dom": "4.3.1"
  },
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage --no-cache",
    "build-release": "webpack --config webpack.config.js --env.prod --env.release",
    "build-prod": "webpack --config webpack.config.js --env.prod",
    "build-dev": "webpack --config webpack.config.js  --env.dev",
    "dev": "webpack-dev-server --config webpack.config.js  --env.dev --env.watch",
    "deploy": "gh-pages -d build",
    "bundlesize": "bundlesize"
  },
  "devDependencies": {
    "@types/jest": "24.0.0",
    "@types/marked": "0.6.0",
    "@types/node": "10.12.21",
    "@types/prismjs": "1.9.0",
    "@types/react": "16.8.1",
    "@types/react-dom": "16.0.11",
    "@types/react-loadable": "5.5.1",
    "@types/react-router-dom": "4.3.1",
    "awesome-typescript-loader": "5.2.1",
    "bundlesize": "0.17.1",
    "clean-webpack-plugin": "1.0.1",
    "copy-webpack-plugin": "4.6.0",
    "css-loader": "2.1.0",
    "gh-pages": "2.0.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.1.0",
    "jsdom": "13.2.0",
    "mini-css-extract-plugin": "0.5.0",
    "node-sass": "4.11.0",
    "sass-loader": "7.1.0",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.1",
    "ts-jest": "23.10.5",
    "typescript": "3.3.1",
    "webpack": "4.28.4",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14",
    "workbox-webpack-plugin": "3.6.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/",
      "/node_modules/"
    ],
    "testRegex": "__tests__/.*\\.test\\.tsx$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.ts",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.ts"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "maxSize": "100 kB"
    }
  ]
}
