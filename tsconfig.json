{
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "exclude": [
    "./*.js",
    "node_modules",
    "resources",
    "coverage",
    "__mocks__",
    "dist"
  ]
}
